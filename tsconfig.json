{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom", "dom.iterable"],
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.d.ts",
    "lib/index.ts"
  ],
  "exclude": [
    "example",
    "node_modules",
    "dist"
  ]
}